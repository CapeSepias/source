{
  "name": "source",
  "version": "4.0.0-rc.0",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build-storybook": "build-storybook -o dist",
    "ci:build": "NODE_ENV=production build-storybook -o dist",
    "clean": "rm -rf dist",
    "fix": "yarn lint:js --fix",
    "lint": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint . --ext .ts,.tsx,.js",
    "lint:styles": "stylelint packages/source/**/styles.ts",
    "storybook": "yarn watch:foundations & yarn watch:icons & start-storybook",
    "test": "jest",
    "tsc": "tsc",
    "validate": "yarn tsc && yarn lint && yarn test",
    "watch:foundations": "cd packages/source/foundations && yarn watch",
    "watch:icons": "cd packages/source/icons && yarn watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": "sort-package-json"
  },
  "prettier": "@guardian/prettier",
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/dist"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.10.0",
    "@babel/preset-typescript": "^7.9.0",
    "@emotion/babel-preset-css-prop": "^11.0.0",
    "@emotion/react": "^11.1.2",
    "@guardian/prettier": "^0.4.2",
    "@storybook/addon-backgrounds": "^6.1.15",
    "@storybook/addon-viewport": "^6.1.11",
    "@storybook/react": "^6.1.15",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.6.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "execa": "^5.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "regenerator-runtime": "^0.13.7",
    "sort-package-json": "^1.48.1",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.19.0"
  }
}
