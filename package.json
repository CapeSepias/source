{
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "lerna bootstrap",
    "build": "lerna run build --stream",
    "prebuild-storybook": "yarn build",
    "build-storybook": "build-storybook -o dist",
    "ci:build": "NODE_ENV=production build-storybook -o dist",
    "clean": "lerna run clean",
    "fix": "yarn lint:js --fix",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint . --ext .ts,.tsx,.js",
    "lint:styles": "stylelint packages/source/**/styles.ts",
    "prerelease": "npm-run-all build",
    "release": "lerna publish",
    "prestorybook": "lerna bootstrap",
    "storybook": "start-storybook",
    "test": "jest",
    "tsc": "tsc",
    "prevalidate": "lerna bootstrap",
    "validate": "npm-run-all --parallel tsc lint test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "**/*.{js,jsx,ts,tsx,yml}": [
      "prettier --write"
    ]
  },
  "prettier": "@guardian/prettier",
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/dist"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-typescript": "^7.12.16",
    "@emotion/babel-preset-css-prop": "^11.2.0",
    "@emotion/react": "^11.1.5",
    "@guardian/prettier": "^0.4.2",
    "@octokit/core": "^3.2.5",
    "@storybook/addon-backgrounds": "^6.1.18",
    "@storybook/addon-viewport": "^6.1.18",
    "@storybook/react": "^6.1.18",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.6.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "globby": "^11.0.2",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sort-package-json": "^1.48.1",
    "stylelint": "^13.10.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^4.1.5",
    "webpack": "^5.22.0"
  }
}
